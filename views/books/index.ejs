<% include ../partials/header %>

<div class="container">
  
  <header class="jumbotron">
         <div class="container">
             <h1>Welcome To BookPix</h1>
           <p>View all book choices, then pick your favorite for the next reading!</p>
                <a class="btn btn-primary btn-large" href="/books/new"><i class="fa fa-book"></i>  Add New Book</a>
             <p> 
           <form action="/books" method="GET" class="form-inline">
               <div class="form-group">
                 <input type="text" name="search" class="form-control" placeholder="Search for book...">
                 <input type="submit" value="Search" class="btn btn-default">
               </div>
           </form>
           </p>
         </div>
 </header>
  
  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <div class="col-md-12">
      <% if(noMatch !== undefined) { %>
        <h3>
          <%=noMatch%>
      </h3>
     <% } %>
    </div>
    <% books.forEach(function(book){ %>
      <div class="col-md-4 col-sm-12 col-lg-3">
        <div class="thumbnail">
          <a href="/books/<%=book._id%>"><img src="<%=book.image%>"></a>
          <div class="caption">
            <h4><%=book.title%></h4>
            <a href="/books/<%=book._id%>" class="btn btn-success">
              More <i class="fa fa-angle-double-right"></i>
            </a>
          </div>
      </div>
    </div>
   <% }); %>
</div>
</div>

<% include ../partials/footer %>